
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/Layout_Sanpham.cshtml";
}
@ViewData["Message"];




@using (Html.BeginForm("ThanhToan", "Cart", FormMethod.Post))
{


<div class="container">
    <div class="heading"><h2>Thông Tin Khách Hàng</h2></div>
    <form name="form2" id="ff2" method="post" action="register.php">
        <div class="form-group">
            <input name="shipName" class="form-control" placeholder="Tên :" required>
        </div>

        <div class="form-group">
            <input name="address" class="form-control" placeholder="Địa chỉ :" required>
        </div>

        <div class="form-group">
            <label>Số điện thoại : @(ViewBag.phoneNumber ?? "Không có")</label>
            @if (ViewBag.phoneNumber == null)
            {
        <a asp-controller="ManageAccount" asp-action="ManageAccount" class="btn-link btn-bracketed">[Đi tới quản lí tài khoản]</a>
            }
        </div>

        <span class="text-danger">@ViewBag.NoPhoneNumber</span><br /><br />
        <button type="submit" class="btn btn-1">Thanh toán</button>
        <a asp-action="ThanhToanVnPay">
            <img src="~/Hinh/vn-pay.jpg" alt="Check out with VNPay" width="150" />
        </a>
        <a asp-action="ThanhToanPaypal">
            <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/checkout-logo-large.png" alt="Check out with PayPal" />
        </a>

        <br />
        <br />
        <br />
    </form>
    

</div>

}
